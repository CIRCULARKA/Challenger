{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Server/Challenger.Server"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/Server/Challenger.Server"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build & Run Server",
			"dependsOn": [ "Build Server", "Run Server" ],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
